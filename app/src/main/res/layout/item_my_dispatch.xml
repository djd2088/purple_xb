<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">

        <ImageView
            android:id="@+id/iv_main_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/tv_black_333_14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_main_pic"
            android:text="大学物理笔记" />

        <TextView
            android:id="@+id/tv_note"
            style="@style/tv_gray_999_10sp"
            android:layout_alignBottom="@id/iv_main_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_main_pic"
            android:text="留言：100" />

        <TextView
            android:id="@+id/tv_brows"
            style="@style/tv_gray_999_10sp"
            android:layout_alignBottom="@id/iv_main_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_note"
            android:text="浏览：99" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/tv_red_fb4b4b_14sp"
            android:layout_alignBottom="@id/iv_main_pic"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"
            android:text="￥：199" />

    </RelativeLayout>

    <View
        style="@style/line_1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_btn_grayf4_1dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/gray_999" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@id/tv_edit"
            android:background="@drawable/bg_btn_grayf4_1dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/gray_999" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_toLeftOf="@id/tv_delete"
            android:background="@drawable/bg_btn_grayf4_1dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/gray_999" />

    </RelativeLayout>
    <View
        android:layout_height="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@color/main"
        android:layout_marginTop="@dimen/dp_10"/>

</LinearLayout>